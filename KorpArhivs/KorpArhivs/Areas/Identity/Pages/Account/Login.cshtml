@page
@model LoginModel

@{
    ViewData["Title"] = "Pieslēgties";
}

<div class="row align-items-center p-3">
    <div class="col-md-6 border-end-md pb-4 p-sm-5 text-center">
        <h2 class="h3 mb-4 mb-sm-5">Laipni lūdzam!</h2>
        <img class="d-block mx-auto" src="~/images/signin.svg" width="344" alt="Pieslēgties">
        <div class="mt-4 mt-sm-5">Neesi reģistrējies? <a href="#signup-modal" data-bs-toggle="modal" data-bs-dismiss="modal">Reģistrējies šeit</a></div>
    </div>
    <div class="col-md-6 px-4 pt-2 pb-4 px-sm-5 pb-sm-5 pt-md-5">
        <a class="btn btn-outline-info w-100 mb-3" href="#"><i class="fi-google fs-lg me-1"></i>Pieslēgties ar Google</a><a class="btn btn-outline-info w-100 mb-3" href="#"><i class="fi-facebook fs-lg me-1"></i>Pieslēgties ar Facebook</a>
        <div class="d-flex align-items-center py-3 mb-3"> 
            <hr class="w-100">
            <div class="px-3">vai</div>
            <hr class="w-100">
        </div>
        <form id="account" method="post">
            <div class="mb-4">
                <label asp-for="Input.Email" class="form-label">E-pasts</label>
                <input asp-for="Input.Email" class="form-control" placeholder="E-pasts"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <label asp-for="Input.Password" class="form-label">Parole</label>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="fs-sm">Aizmirsi paroli?</a>
                </div>
                <div class="password-toggle">
                    <input asp-for="Input.Password" class="form-control" placeholder="Parole" />
                    <label class="password-toggle-btn" aria-label="Parādīt/paslēpt paroli">
                        <input class="password-toggle-check" type="checkbox"><span class="password-toggle-indicator"></span>
                    </label>
                </div>
            </div>
            <button class="btn btn-primary btn-lg w-100" type="submit">Pieslēgties</button>
        </form>
    </div>
</div>
