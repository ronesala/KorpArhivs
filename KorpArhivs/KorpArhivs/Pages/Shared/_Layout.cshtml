<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KorpArhivs</title>
    <link type="text/css" href="~/lib/@@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link type="text/css" href="~/css/swipe.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-theme-secondary border-bottom box-shadow mb-3">
            <div class="container">
                <ul class="navbar-nav navbar-nav-hover align-items-lg-start">
                    <li class="nav-item text-light">
                        <a class="navbar-brand" asp-page="/Index">[Logo]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-page="/Images">Attēli</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-page="/Documents">Dokumenti</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-page="/Other">Dažādi</a>
                    </li>
                </ul>
            </div>
            <div class="collapse navbar-collapse order-lg-2 justify-content-end" id="navbarNav">
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - KorpArhivs
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
