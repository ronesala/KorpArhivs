@page
@model KorpArhivs.Pages.UsersModel
@{
}

<div class="">
    <div class="mt-4 pb-1">
        <h2>Lietotāji:</h2>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Vārds</th>
                <th scope="col">Uzvārds</th>
                <th scope="col">Epasts</th>
                <th scope="col">Talrunis</th>
                <th scope="col">Apstiprināts</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
           {
               <tr>
                <th scope="row">1</th>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <th scope="row"><input class="form-check-input" asp-for="@user.IsConfirmed" type="checkbox"></th>
            </tr>
           } 
        </tbody>
    </table>
</div>