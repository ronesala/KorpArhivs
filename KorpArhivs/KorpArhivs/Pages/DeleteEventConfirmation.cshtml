@page "{category}/{id}"
@model KorpArhivs.Pages.DeleteEventConfirmationModel
@{
    ViewData["Title"] = "Dzēst notikumu";
}

<div class="d-flex flex-column m-5">
    <div class="align-items-center text-center">
        <h2 class="text-danger">! Apstiprinot notikuma dzēšanu, neatgriezeniski tiks izdzēsts notikums un tā faili !</h2>
    </div>

    <form method="post">
        <div class="mt-3">
            <hr class="w-100">

            <h3>Notikums: @Model.EventName</h3>
            <h3>Notikuma apraksts:</h3>
            <p>@Model.EventDescription</p>

            @if (@Model.FileCount == 1)
            {
                <h3>Šim notikumam pievienots @Model.FileCount fails</h3>
            }
            else
            {
                <h3>Šim notikumam pievienoti @Model.FileCount faili</h3>
            }
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-danger d-none d-md-inline">Dzēst visu notikumu</button>
        </div>
    </form>
</div>
